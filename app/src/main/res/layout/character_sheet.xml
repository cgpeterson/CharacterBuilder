        android:id="@+id/ClassSpin"
        android:layout_width="85dp"
        android:layout_height="42dp"
        android:background="#80979797"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/ClassTitle"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/ClassTitle"
        app:layout_constraintTop_toBottomOf="@+id/ClassTitle"
        tools:visibility="visible"
        android:entries="@array/Class_array"/>

    <Spinner
        android:id="@+id/RaceSpin"
        android:layout_width="85dp"
        android:layout_height="42dp"
        android:background="#80979797"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/RaceTitle"
        app:layout_constraintStart_toStartOf="@+id/RaceTitle"
        app:layout_constraintTop_toBottomOf="@+id/RaceTitle"
