        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/SizeTitle"
        app:layout_constraintStart_toEndOf="@+id/LevelEditbox"
        app:layout_constraintTop_toTopOf="@+id/SizeTitle" />

    <TextView
        android:id="@+id/RaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/SexTitle"
