        android:textColorHint="#C1C1C1"
        app:layout_constraintEnd_toEndOf="@+id/PlayerNameTitle"
        app:layout_constraintStart_toStartOf="@+id/PlayerNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/PlayerNameTitle" />

